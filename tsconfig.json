{
  "compilerOptions": {
    "baseUrl": ".",
    "module": "esnext",
    "target": "es2017",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "noEmitHelpers": true,
    "noEmitOnError": true,
    "lib": [
      "es2017",
      "dom",
      "es6"
    ],
    "paths": {
        "@core/*": ["app/core/*"],
        "@layouts/*": ["app/layouts/*"],
        "@shared/*": ["./app/shared/*"],
        "@modules/*": ["./app/modules/*"]
    }
  },
  "exclude": [
    "node_modules",
    "platforms"
  ]
}
